@model IEnumerable<Shapes.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Items</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.shape)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.density)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="rowToClick" onclick="toggleDetails()">
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shape)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.density)
            </td>
            <td class="detailsToShow" style="display:none">
                @{
                    Html.RenderAction("Details", "Home", new { itemName = item.name });
                }
            </td>
        </tr>
    }

</table>

<script>
    function toggleDetails() {
        $('.detailsToShow').toggle();
    }
</script>